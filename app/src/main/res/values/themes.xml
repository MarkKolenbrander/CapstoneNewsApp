<resources>
    <!-- Base application theme. -->
    <style name="Theme.CapstoneNewsApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/green_capstone</item>
        <item name="colorOnPrimary">@color/blue_capstone</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_capstone</item>
        <item name="colorSecondaryVariant">@color/grey_capstone</item>
        <item name="colorOnSecondary">@color/blue_capstone</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

        <item name="android:windowBackground">@color/white</item>

    </style>

    <style name="AppBarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/blue_capstone</item>
        <item name="android:textSize">20sp</item>
        <item name="colorControlActivated">@color/green_capstone</item>
        <item name="colorControlNormal">@color/blue_capstone</item>
    </style>

    <style name="SearchBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/blue_capstone</item>
    </style>

    <style name="DetailTextStyleHeader" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/green_capstone</item>
    </style>

    <style name="DetailTextStyleContent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/blue_capstone</item>
    </style>

</resources>