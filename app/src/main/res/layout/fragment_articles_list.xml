<!--        >-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ArticleListFragment"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:background="@color/blue_capstone"
                android:orientation="vertical">

                <SearchView
                    android:id="@+id/sv_search_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey_capstone"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp" />

<!--                <androidx.recyclerview.widget.RecyclerView-->
<!--                    android:id="@+id/rv_articles"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:visibility="visible"-->
<!--                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">-->

<!--                </androidx.recyclerview.widget.RecyclerView>-->

                <androidx.compose.ui.platform.ComposeView
                    android:id="@+id/composeView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_no_internet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    android:padding="16dp"
                    android:text="@string/internet_problem"
                    android:textAlignment="center"
                    android:textColor="@color/blue_capstone"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_no_internet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/no_internet"
                    android:padding="16dp"
                    android:src="@drawable/ic_no_wifi"
                    android:visibility="gone" />

            </RelativeLayout>


        </FrameLayout>

<!--    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>-->

</androidx.coordinatorlayout.widget.CoordinatorLayout>

